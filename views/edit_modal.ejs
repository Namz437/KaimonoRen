<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Hijab</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/hijab?_method=PUT" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">idproduk</label>
            <input
              type="text"
              class="form-control idproduk"
              name="idproduk"
              nama="Enter idproduk"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">namaproduk</label>
            <input
              type="text"
              class="form-control namaproduk"
              name="namaproduk"
              nama="Enter namaproduk"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">harga</label>
            <input
              type="number"
              class="form-control harga"
              name="harga"
              nama="Enter harga"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">deskripsi</label>
            <textarea
              type="text"
              class="form-control deskripsi"
              name="deskripsi"
              nama="Enter deskripsi"
              rows="3"
              required
            ></textarea>
          </div>
          <div class="form-group">
            <label for="name">gambar</label>
            <input
              type="string"
              class="form-control gambar"
              name="gambar"
              nama="Enter gambar"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Ubah</button>
        </div>
      </form>
    </div>
  </div>
</div>
