<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-outline-primary btn-sm"
      data-toggle="modal"
      data-target="#add-modal"
    >
      Tambah
    </button>
    
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead class="table-dark text-white">
          <tr>
            <th>No</th>
            <th>IdProduk</th>
            <th>NamaProduk</th>
            <th>Harga</th>
            <th>Deskripsi</th>
            <th>Gambar</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < hijab.length; i++){ %>
          <tr>
            <td><%= i +1 %></td>
            <td><%= hijab[i].idproduk %></td>
            <td><%= hijab[i].namaproduk %></td>
            <td><%= hijab[i].harga %></td>
            <td><%= hijab[i].deskripsi %></td>
            <td>
              <img
              src="<%= hijab[i].gambar %>"
              alt="Produk"
              class="image"
              width="100"
              />
            </td>
            <td class="text-center">
              <form action="/hijab/<%= hijab[i].id %>?_method=DELETE" method="POST">
              <a
                href="javascript:void()"
                class="btn btn-outline-warning btn-sm button-update"
                data-id="<%= hijab[i].id %>"
                data-idproduk="<%= hijab[i].idproduk %>"
                data-namaproduk="<%= hijab[i].namaproduk %>"
                data-harga="<%= hijab[i].harga %>"
                data-deskripsi="<%= hijab[i].deskripsi %>"
                data-gambar="<%= hijab[i].gambar %>"
                >Edit</a
              >
              <a 
              href="/hijab/<%= hijab[i]._id %>" 
              class="btn btn-outline-info btn-sm button-view" 
             >View</a
           >
              <button type="submit" 
              class="btn btn-outline-danger btn-sm"
              onclick="return confirm('Apa kamu yakin untuk menghapus data hijab ini?');"
              >
                Hapus
              </button>
            </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<p>
  <a href="/kaimono" class="btn btn-secondary">Homepage</a>
</p>

