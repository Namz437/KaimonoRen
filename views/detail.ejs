<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card mt-4">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Detail Produk</h4>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="gambar" class="text-muted">Gambar:</label>
            <img src="/uploads/<%= hijab.gambar %>" class="img-fluid" alt="Gambar Produk">
          </div>
          <div class="form-group">
            <label for="namaproduk" class="text-muted">Nama Produk:</label>
            <p class="form-control-plaintext"><%= hijab.namaproduk %></p>
          </div>
          <div class="form-group">
            <label for="harga" class="text-muted">Harga:</label>
            <p class="form-control-plaintext">Rp <%= hijab.harga %></p>
          </div>
          <div class="form-group">
            <label for="deskripsi" class="text-muted">Deskripsi:</label>
            <p class="form-control-plaintext"><%= hijab.deskripsi %></p>
          </div>
        </div>
        <div class="card-footer text-right bg-light">
          <p>
          <a href="/hijab" class="btn btn-secondary">Kembali</a>
        </p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .container {
    margin-top: 20px;
  }

  .card {
    border: none;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  }

  .card-header {
    background-color: #007bff;
    color: #fff;
    padding: 12px;
  }

  .card-title {
    margin: 0;
    font-size: 20px;
    font-weight: bold;
  }

  .card-body {
    padding: 20px;
  }

  .form-group label {
    font-weight: bold;
    margin-bottom: 5px;
  }

  .form-control-plaintext {
    background-color: #f8f9fa;
    border: none;
    padding: 0.375rem 0.75rem;
    margin-bottom: 0;
    font-size: 1rem;
    line-height: 1.5;
    color: #6c757d;
    word-break: break-word;
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
    margin-bottom: 10px;
  }


  .btn-secondary:hover {
    background-color: #545b62;
    border-color: #545b62;
  }
</style>